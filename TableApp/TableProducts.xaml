<Window x:Class="TableApp.TableProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TableApp"
        mc:Ignorable="d" Title="Книжный магазин"
        Height="600" Width="900" FontFamily="Times New Roman" 
        FontSize="14">

    <Window.Resources>
        <!-- Конвертер для отображения скидки -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="397*"/>
        </Grid.RowDefinitions>

        <!-- верхняя панель -->
        <Grid Grid.Row="0" Background="#7FFF00">
            <Image Source="/icon.jpg" Height="40" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <TextBlock Text="ООО 'КамШОП'" VerticalAlignment="Center" Margin="60,0,0,0" FontSize="20" HorizontalAlignment="Left"/>

            <TextBlock x:Name="txtFullNameAndRole" HorizontalAlignment="Right" VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>

        </Grid>

        <Grid Grid.Row="1" Background="#7FFF00">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0">
                <Button x:Name="btnProducts" Content="Товары" Width="70" Height="20" Margin="10,0,5,0" 
                        Click="Products_Click" FontSize="12"/>
                <Button x:Name="btnMakeOrder" Content="Оформить заказ" Width="90" Height="20" Margin="5,0" 
                        Click="NoWorking_Click" FontSize="12"/>
                <Button x:Name="btnEdit" Content="Изменить товар" Width="90" Height="20" Margin="5,0" 
                        Click="NoWorking_Click" FontSize="12"/>
                <Button x:Name="btnDelete" Content="Удалить товар" Width="90" Height="20" Margin="5,0" 
                        Click="NoWorking_Click" FontSize="12"/>
                <Button x:Name="btnOrdersAdmin" Content="Изменить заказы" Width="90" Height="20" Margin="5,0" 
                        Click="NoWorking_Click" FontSize="12"/>
                <Button x:Name="btnExit" Content="Выход" Width="70" Height="20" Margin="5,0" 
                        Click="BtnExit_Click" FontSize="12"/>
            </StackPanel>

        </Grid>

        <!-- таблица -->
        <DataGrid x:Name="booksGrid" Grid.Row="2" Margin="10,10,10,10" AutoGenerateColumns="False"
                  LoadingRow="booksGrid_LoadingRow" IsReadOnly="True" FontSize="14">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Фото" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding PhotoPath}" Width="50" Height="50" Stretch="Uniform"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="Auto"/>
                <DataGridTextColumn Header="Название" Binding="{Binding ProductName}" Width="Auto"/>
                <DataGridTemplateColumn Header="Цена" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- Основная цена -->
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding Price, StringFormat={}{0:F2}}"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Цена со скидкой (только если есть скидка) -->
                                <TextBlock Margin="5,0,0,0" 
                                           Text="{Binding DiscountedPrice, StringFormat={}{0:F2}}"
                                           Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Discount, StringFormat={}{0}%}" Width="Auto"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding QuantityInStock}" Width="Auto"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="Auto"/>
                <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer}" Width="Auto"/>
                <DataGridTextColumn Header="Ед." Binding="{Binding Unit}" Width="40"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>